<UserControl x:Class="HorseBarn.WPF.Views.HorseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HorseBarn.WPF.Views"
             xmlns:conv="clr-namespace:HorseBarn.WPF.Converters"
             xmlns:horse="clr-namespace:HorseBarn.lib.Horse;assembly=HorseBarn.lib"
             xmlns:cart="clr-namespace:HorseBarn.lib.Cart;assembly=HorseBarn.lib"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

        <conv:IsValidToRedConverter x:Key="IsValidToRedConverter" />

        <conv:InterfaceDataTemplateSelector x:Key="InterfaceDataTemplateSelector">
            <conv:InterfaceDataTemplateSelector.DataTemplates>
                <x:Array Type="DataTemplate">

                    <DataTemplate DataType="{x:Type horse:ILightHorse}">
                        <Grid Background="{Binding Path=Horse.IsValid, Converter={StaticResource IsValidToRedConverter}}"
                              cal:Message.Attach="[Event MouseMove] = [Action HandleMouseMove($dataContext, $source, $eventArgs)]"
                              >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Content="Light Horse" />
                            <TextBlock Grid.Row="1" Text="{Binding Path=Horse.Name}"/>
                            <TextBlock Grid.Row="2" Text="{Binding Path=Horse.Breed}"/>
                            <TextBlock Grid.Row="3" Text="{Binding Path=Horse.BirthDate}"/>
                        </Grid>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type horse:IHeavyHorse}">
                        <Grid Background="{Binding Path=IsValid, Converter={StaticResource IsValidToRedConverter}}"
                              cal:Message.Attach="[Event MouseMove] = [Action HandleMouseMove($dataContext, $source, $eventArgs)]">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Content="Heavy Horse" />
                            <TextBlock Grid.Row="1" Text="{Binding Path=Horse.Name}"/>
                            <TextBlock Grid.Row="2" Text="{Binding Path=Horse.Breed}"/>
                            <TextBlock Grid.Row="3" Text="{Binding Path=Horse.BirthDate}"/>
                        </Grid>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type cart:IRacingChariot}">
                        <Grid Background="{Binding Path=Cart.IsValid, Converter={StaticResource IsValidToRedConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Content="Racing Chariot" />
                            <TextBox Grid.Row="1" Text="{Binding Path=Cart.NumberOfHorses, Mode=TwoWay}"/>
                            <TextBox Grid.Row="2" Text="{Binding Path=Cart.Name, Mode=TwoWay}"/>
                        </Grid>
                    </DataTemplate>


                </x:Array>
            </conv:InterfaceDataTemplateSelector.DataTemplates>
            <conv:InterfaceDataTemplateSelector.NullTemplate>
                <DataTemplate>
                    <Label>No Horse Selected</Label>
                </DataTemplate>
            </conv:InterfaceDataTemplateSelector.NullTemplate>
        </conv:InterfaceDataTemplateSelector>
    </UserControl.Resources>
    <ContentControl Content="{Binding}" ContentTemplateSelector="{StaticResource InterfaceDataTemplateSelector}">

    </ContentControl>

</UserControl>
